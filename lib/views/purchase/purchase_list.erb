<h2>Purchase List</h2>

<table class="tablesorter" style='width: 800px;'>
  <thead>
    <tr>
      <th width="60">Bill Date</th>
      <th>Supplier</th>
      <th width="100">Bill No.</th>
      <th width="80">G R Date</th>
      <th width="70">Entry Date</th>
      <th width="70">CESS Amount</th>
      <th width="90">Total Amount</th>
      <td width="30"></td>
      <td width="10" ></td>
    </tr>
  </thead>

  <tbody class="list_view">
    <% Purchase.find(:all, :order => "bill_date desc, id desc").each {|bill| %>
      <tr>
        <td><%=bill.bill_date.strftime("%d/%m/%Y")%></td>
        <td><%=bill.supplier.name%></td>
        <td><%=bill.bill_no%></td>
        <td><%=bill.gr_date.strftime("%d/%m/%Y")%></td>
        <td><%=bill.de_date.strftime("%d/%m/%Y")%></td>
        <td align="right"><%=bill.cess_amount%></td>
        <td align="right"><%=bill.total_amount%></td>
        <td><a href="/purchase/detail/<%=bill.id%>">Details</a> </td>
        <td></td>
      </tr>
    <% } %>
  </tbody>
</table>